@model Proyecto3lenguajes.Models.Administrador

@{
    ViewData["Title"] = "LoginAdm";
}

<h1>LoginAdm</h1>

<h4>Administrador</h4>
<hr />
<div class="row justify-content-center">
    <div class="card ">

        <div class="card-body " style="background-color:rgb(10, 129, 16); background-repeat: no-repeat; background-attachment: fixed; opacity:0.81;">

            <form class="form" id="LoginAdm">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    
                    <input asp-for="nombre_negocio" class="form-control form-control-lg" type="text" placeholder="Nombre" />
                    <span asp-validation-for="nombre_negocio" class="text-danger"></span>
                </div>


                <div class="form-group">
                    
                    <input asp-for="pass" class="form-control form-control-lg" type="password" placeholder="Contraseña"/>
                    <span asp-validation-for="pass" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
