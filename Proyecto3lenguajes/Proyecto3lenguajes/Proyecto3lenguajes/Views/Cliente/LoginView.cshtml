
@{
    ViewData["Title"] = "LoginView";
    Layout = "_LayoutLogin";

}


<h1></h1>



<div class="container" style="margin-top:auto;margin-bottom:auto;">
    <div class="row align-items-center" style="height:100%!important">
        <div class="card col-sm-6 col-md-6 col-lg-6 py-2 login-form" style="height:100%!important; margin-left: auto; margin-right: auto; background-color: rgba(10, 129, 16,0.4) !important; border-radius: 20px;">
            <div class="card-body">
                <img src="@ViewBag.Logo" style="height:20vh;display:block;margin:auto;" />
                <h4 class="card-text text-center" style="color:white">@ViewBag.Nombre</h4>
                <div class="form" id="logForm">
                    <form>
                        <div class="form-group row">
                            <label class="col-lg-3 col-form-label form-control-label" style="color:white">Usuario</label>
                            <div class="col-lg-9">
                                <input class="form-control" id="Usuario" name="Usuario" type="text">
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-lg-4 col-md-4 col-sm-12 col-form-label form-control-label" style="color:white">Contraseña</label>
                            <div class="col-lg-8 col-md-8 col-sm-12">
                                <input class="form-control" id="Contraseña" name="Contraseña" type="password">
                            </div>
                        </div>

                        <button id="btnIniciar" class="btn btn-primary btn-block">Iniciar Sesión</button>
                        <div class="row">
                            <div class="col-12" id="ResultadoLog">

                            </div>
                        </div>
                        <p class="mensaje">
                            No tienes cuenta? <a href="#">Crea una</a>
                        </p>
                    </form>
                </div>
            </div>
        </div>
    </div>

</div>

@section Scripts {
    <script src="~/js/Login.js"></script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}